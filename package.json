{
  "name": "@platformatic/kafka-hooks",
  "version": "0.1.0",
  "description": "Kafka based webhooks system",
  "homepage": "https://github.com/platformatic/kafka-hooks",
  "author": "Platformatic Inc. <oss@platformatic.dev> (https://platformatic.dev)",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/platformatic/kafka-hooks.git"
  },
  "keywords": [
    "kafka",
    "hooks"
  ],
  "bugs": {
    "url": "https://github.com/platformatic/kafka-hooks/issues"
  },
  "private": false,
  "files": [
    "lib",
    "LICENSE",
    "README.md"
  ],
  "type": "module",
  "main": "./lib/index.js",
  "scripts": {
    "build": "node -e 'import {schema} from \"./lib/schema.js\"; console.log(JSON.stringify(schema, null, 2))' > schema.json && json2ts > config.d.ts < schema.json",
    "lint": "eslint --cache",
    "format": "prettier -w lib",
    "ci": "npm run lint && npm run test:ci",
    "postpublish": "git push origin && git push origin -f --tags",
    "recipient:start": "START_HOOK_RECIPIENT=true node test/fixtures/recipient-server.js"
  },
  "dependencies": {
    "@platformatic/kafka": "^0.3.0",
    "@platformatic/service": "^2.62.0",
    "@platformatic/utils": "^2.62.1",
    "http-errors-enhanced": "^3.0.2",
    "undici": "^7.8.0",
    "wattpm": "^2.62.0"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "cleaner-spec-reporter": "^0.4.0",
    "eslint": "^9.21.0",
    "fastify": "^5.3.2",
    "json-schema-to-typescript": "^15.0.4",
    "neostandard": "^0.12.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.3"
  },
  "engines": {
    "node": ">= 22.14.0"
  }
}
