{
  "name": "@platformatic/kafka-hooks",
  "version": "0.6.0-alpha.2",
  "description": "Kafka based webhooks system",
  "homepage": "https://github.com/platformatic/kafka-hooks",
  "author": "Platformatic Inc. <oss@platformatic.dev> (https://platformatic.dev)",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/platformatic/kafka-hooks.git"
  },
  "keywords": [
    "kafka",
    "hooks"
  ],
  "bugs": {
    "url": "https://github.com/platformatic/kafka-hooks/issues"
  },
  "private": false,
  "files": [
    "lib",
    "LICENSE",
    "README.md"
  ],
  "type": "module",
  "main": "./lib/index.js",
  "scripts": {
    "build": "node -e 'import {schema} from \"./lib/schema.js\"; console.log(JSON.stringify(schema, null, 2))' > schema.json && json2ts > config.d.ts < schema.json",
    "lint": "eslint --cache",
    "format": "prettier -w lib test",
    "test:ci": "c8 -c test/config/c8-ci.json node --test --test-timeout=600000 --test-reporter=cleaner-spec-reporter 'test/*.test.js'",
    "test": "c8 -c test/config/c8-local.json node --test --test-timeout=600000 --test-reporter=cleaner-spec-reporter 'test/*.test.js'",
    "ci": "npm run lint && npm run test:ci",
    "postpublish": "git push origin && git push origin -f --tags",
    "helpers:target-server": "MAIN=true node test/fixtures/target-server.js",
    "helpers:kafka-monitor": "MAIN=true node test/fixtures/kafka-monitor.js"
  },
  "dependencies": {
    "@platformatic/kafka": "^1.8.0",
    "@platformatic/foundation": "^3.0.0",
    "@platformatic/service": "^3.0.0",
    "http-errors-enhanced": "^3.0.2",
    "hwp": "^0.4.1",
    "undici": "^7.8.0"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "cleaner-spec-reporter": "^0.5.0",
    "eslint": "^9.21.0",
    "fastify": "^5.3.2",
    "json-schema-to-typescript": "^15.0.4",
    "neostandard": "^0.12.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.3",
    "prom-client": "^15.1.3",
    "wait-on": "^8.0.3"
  },
  "engines": {
    "node": ">= 22.14.0"
  }
}
